<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black"
    tools:context=".ui.ImageViewerActivity">

    <!-- ViewPager for swiping between images -->
    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <!-- Top bar with close button and counter -->
    <LinearLayout
        android:id="@+id/topBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/gradient_top"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="16dp">

        <ImageButton
            android:id="@+id/closeButton"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="@string/close"
            android:src="@drawable/ic_close"
            app:tint="@android:color/white" />

        <TextView
            android:id="@+id/imageCounter"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            tools:text="1 / 10" />

        <!-- Remark indicator in top bar -->
        <ImageView
            android:id="@+id/remarkIndicator"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_note"
            android:visibility="gone"
            app:tint="@color/remark_indicator_color"
            android:contentDescription="@string/has_remark" />

    </LinearLayout>

    <!-- Swipe hint at bottom -->
    <LinearLayout
        android:id="@+id/swipeHint"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@drawable/gradient_bottom"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="16dp">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_swipe_up"
            app:tint="@android:color/white"
            android:contentDescription="@string/swipe_up" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="@string/swipe_up_for_remark"
            android:textColor="@android:color/white"
            android:textSize="12sp" />

    </LinearLayout>

    <!-- Remark panel (slides up from bottom) -->
    <LinearLayout
        android:id="@+id/remarkPanel"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="bottom"
        android:background="#E6000000"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="24dp"
        android:visibility="visible">

        <!-- Handle for dragging (at top) -->
        <View
            android:id="@+id/remarkPanelHandle"
            android:layout_width="40dp"
            android:layout_height="4dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="24dp"
            android:background="@drawable/panel_handle" />

        <!-- Scrollable content area -->
        <ScrollView
            android:id="@+id/remarkDisplayContainer"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal">

                <!-- Image Metadata Section -->
                <LinearLayout
                    android:id="@+id/metadataSection"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="8dp"
                    android:background="#33FFFFFF"
                    android:layout_marginBottom="24dp"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/image_info"
                        android:textColor="@android:color/white"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:textAllCaps="true"
                        android:letterSpacing="0.1"
                        android:layout_marginBottom="8dp" />

                    <!-- Date Taken -->
                    <LinearLayout
                        android:id="@+id/dateRow"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingVertical="4dp"
                        android:visibility="gone">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/date_taken"
                            android:textColor="#AAFFFFFF"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/dateTakenValue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@android:color/white"
                            android:textSize="14sp"
                            tools:text="Jan 25, 2024 at 3:45 PM" />

                    </LinearLayout>

                    <!-- Location -->
                    <LinearLayout
                        android:id="@+id/locationRow"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingVertical="4dp"
                        android:visibility="gone">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/location"
                            android:textColor="#AAFFFFFF"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/locationValue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@android:color/white"
                            android:textSize="14sp"
                            tools:text="3.1234° N, 101.5678° E" />

                    </LinearLayout>

                    <!-- Camera -->
                    <LinearLayout
                        android:id="@+id/cameraRow"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingVertical="4dp"
                        android:visibility="gone">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/camera"
                            android:textColor="#AAFFFFFF"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/cameraValue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@android:color/white"
                            android:textSize="14sp"
                            tools:text="Samsung Galaxy S21" />

                    </LinearLayout>

                    <!-- Resolution -->
                    <LinearLayout
                        android:id="@+id/resolutionRow"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingVertical="4dp"
                        android:visibility="gone">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/resolution"
                            android:textColor="#AAFFFFFF"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/resolutionValue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@android:color/white"
                            android:textSize="14sp"
                            tools:text="4032 × 3024" />

                    </LinearLayout>

                    <!-- File Size -->
                    <LinearLayout
                        android:id="@+id/fileSizeRow"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingVertical="4dp"
                        android:visibility="gone">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/file_size"
                            android:textColor="#AAFFFFFF"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/fileSizeValue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@android:color/white"
                            android:textSize="14sp"
                            tools:text="3.2 MB" />

                    </LinearLayout>

                </LinearLayout>

                <!-- Remark Display -->
                <TextView
                    android:id="@+id/remarkLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/remark"
                    android:textColor="#AAFFFFFF"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:textAllCaps="true"
                    android:letterSpacing="0.1"
                    android:layout_marginBottom="8dp"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/remarkDisplay"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/white"
                    android:textSize="22sp"
                    android:lineSpacingExtra="6dp"
                    android:gravity="center"
                    android:fontFamily="serif"
                    android:visibility="gone"
                    tools:text="This is a sample remark for the image" />

                <!-- No remark placeholder -->
                <TextView
                    android:id="@+id/noRemarkText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/no_remark"
                    android:textColor="#66FFFFFF"
                    android:textSize="16sp"
                    android:fontStyle="italic"
                    android:visibility="gone" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/editRemarkButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:text="@string/add_remark"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    app:strokeColor="@android:color/white"
                    android:textColor="@android:color/white" />

            </LinearLayout>

        </ScrollView>

        <!-- Edit mode: input field -->
        <LinearLayout
            android:id="@+id/remarkEditContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:text="@string/enter_remark"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                android:textStyle="bold" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/remarkInputLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                app:boxStrokeColor="@android:color/white"
                app:hintTextColor="@android:color/white">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/remarkInput"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/enter_remark"
                    android:inputType="textMultiLine"
                    android:maxLines="5"
                    android:minLines="3"
                    android:textColor="@android:color/white"
                    android:textColorHint="#88FFFFFF"
                    android:imeOptions="actionDone" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/saveRemarkButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/save_remark"
                app:cornerRadius="8dp" />

        </LinearLayout>

        <!-- Swipe down hint -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="Swipe down to close"
            android:textColor="#88FFFFFF"
            android:textSize="12sp" />

    </LinearLayout>

</FrameLayout>
